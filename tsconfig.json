{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false
  },
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true
  },
  "exclude": [
    "dist/**/*",
    "public/**/*",
    "node_modules"
  ]
}
