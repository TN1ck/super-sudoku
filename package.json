{
  "name": "typescript2-react-redux-cssmodules-boilerplate",
  "version": "0.1.0",
  "description": "A boiler-plate setup for TypeScript2/React/Redux applications",
  "license": "MIT",
  "engines": {
    "node": "6"
  },
  "scripts": {
    "prebuild": "npm run clean && export GENERATE_TYPINGS=TRUE && node build.js",
    "build": "NODE_ENV=production && node build.js",
    "clean": "rm -rf dist/",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-watchAll": "jest --watchAll",
    "start": "node server.js",
    "prettier:base": "prettier --parser typescript --single-quote --trailing-comma=\"all\" --no-bracket-spacing",
    "prettier:check": "npm run prettier:base -- --list-different './src/**/*.ts' './src/**/*.tsx'",
    "prettier:write": "npm run prettier:base -- --write './src/**/*.ts' './src/**/*.tsx'"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "hot",
    "starter",
    "seed"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "@types/jest": "^20.0.5",
    "@types/lodash": "^4.14.71",
    "@types/node": "^8.0.17",
    "@types/react": "^15.6.0",
    "@types/react-router": "^4.0.14",
    "@types/react-router-dom": "^4.0.7",
    "@types/redux-logger": "^3.0.0",
    "@types/webpack-env": "^1.13.0",
    "autoprefixer": "7.1.2",
    "awesome-typescript-loader": "3.2.2",
    "babel-core": "6.25.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react-hmre": "1.1.1",
    "classnames": "2.2.5",
    "commander": "2.11.0",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.28.4",
    "cssnano": "3.10.0",
    "eslint": "4.3.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "history": "4.6.3",
    "html-webpack-plugin": "2.30.1",
    "imports-loader": "0.7.1",
    "jest": "20.0.4",
    "json-loader": "0.5.7",
    "lodash": "4.17.4",
    "node-sass": "^4.5.3",
    "postcss-cssnext": "3.0.2",
    "postcss-import": "10.0.0",
    "postcss-loader": "2.0.6",
    "postcss-modules-local-by-default": "1.2.0",
    "postcss-nested": "2.1.0",
    "postcss-smart-import": "0.7.5",
    "raw-loader": "0.5.1",
    "react": "15.6.1",
    "react-addons-css-transition-group": "15.6.0",
    "react-color": "^2.13.0",
    "react-css-modules": "4.6.0",
    "react-dom": "15.6.1",
    "react-hot-loader": "3.0.0-beta.7",
    "react-redux": "5.0.5",
    "react-router": "4.1.2",
    "react-router-dom": "^4.1.2",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0",
    "sass-loader": "^6.0.6",
    "source-map-support": "0.4.15",
    "style-loader": "0.18.2",
    "stylelint": "8.0.0",
    "stylelint-order": "0.6.0",
    "stylelint-webpack-plugin": "0.9.0",
    "ts-helpers": "1.1.2",
    "ts-jest": "20.0.7",
    "tslint": "5.5.0",
    "tslint-loader": "3.5.3",
    "tslint-react": "^3.1.0",
    "typescript": "2.4.2",
    "typings": "2.1.1",
    "uglifyjs-webpack-plugin": "0.4.6",
    "url-loader": "0.5.9",
    "webpack": "3.4.1",
    "webpack-dev-server": "2.6.1",
    "webpack-hot-middleware": "2.18.2",
    "webpack-split-by-path": "2.0.0",
    "whatwg-fetch": "2.0.3"
  }
}
